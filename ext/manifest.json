{
  "name": "Large subtitles in YouTube",
  "description": "Large subtitles in YouTube for education purpose",
  "version": "22.6.13",
  "manifest_version": 3,
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "32": "/images/on.png"
    }
  },
  "icons": {
    "32": "/images/on.png",
    "128": "/images/on-128.png"
  },
  "content_scripts": [
    {
      "js": [
        "content.js"
      ],
      "matches": [
        "https://www.youtube.com/watch*"
      ]
    }
  ]
}